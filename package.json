{
  "name": "enterprise-auth-workspace-api",
  "version": "1.0.0",
  "description": "Enterprise-grade API with Better-auth and Workspace management",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
"start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "docker:dev": "docker compose --profile dev up -d",
    "docker:studio": "docker compose --profile dev up -d prisma-studio",
    "docker:stop": "docker compose --profile dev down",
    "docker:logs": "docker compose logs -f prisma-studio",
    "docker:prod:up": "docker compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker compose -f docker-compose.prod.yml down"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "@prisma/client": "6.16.2",
    "@types/jsdom": "^27.0.0",
    "async-retry": "^1.3.3",
    "axios": "^1.13.1",
    "bcryptjs": "^2.4.3",
    "better-auth": "^1.3.33",
    "bull": "^4.16.5",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "gpt-tokenizer": "^3.4.0",
    "helmet": "^7.2.0",
    "ioredis": "^5.8.2",
    "jsdom": "^27.2.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.11.0",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.1.6",
    "node-cron": "^4.2.1",
    "openai": "^6.7.0",
    "pdf-parse": "^2.4.5",
    "puppeteer": "^24.31.0",
    "rate-limit-redis": "^4.2.3",
    "resend": "^6.3.0",
    "socket.io": "^4.8.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.24",
    "@types/pdf-parse": "^1.1.5",
    "prisma": "6.16.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
